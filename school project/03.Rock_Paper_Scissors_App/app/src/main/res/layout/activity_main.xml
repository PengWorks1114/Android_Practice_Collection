<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- 學號與名稱 -->
        <TextView
            android:id="@+id/txtStudentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rock_paper_scissors_app"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="12dp" />

        <!-- 標題圖 -->
        <ImageView
            android:id="@+id/imgTitle"
            android:layout_width="320dp"
            android:layout_height="160dp"
            android:src="@drawable/title_image"
            android:layout_marginBottom="20dp"
            android:scaleType="fitCenter" />

        <!-- 提示文字 -->
        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="何連勝できるかな？"
            android:textSize="18sp"
            android:textColor="#222222"
            android:layout_marginBottom="20dp" />

        <!-- 玩家手勢 -->
        <LinearLayout
            android:id="@+id/layoutPlayerHands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imgGu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/j_gu02"
                android:background="@drawable/selector_hand"
                android:padding="10dp"
                android:onClick="onClickSelectHand"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/imgChoki"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/j_ch02"
                android:background="@drawable/selector_hand"
                android:padding="10dp"
                android:onClick="onClickSelectHand"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/imgPa"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/j_pa02"
                android:background="@drawable/selector_hand"
                android:padding="10dp"
                android:onClick="onClickSelectHand"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- CPU 手 -->
        <ImageView
            android:id="@+id/imgCpuHand"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"
            android:scaleType="fitCenter" />

        <!-- 結果文字 -->
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 控制按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="勝負！"
                android:enabled="false"
                android:onClick="onClickStartAction"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="次の戦いへ"
                android:enabled="false"
                android:onClick="onClickNextAction"
                android:backgroundTint="#9E9E9E"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
