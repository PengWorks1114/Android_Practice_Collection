<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 學號與姓名 -->
    <TextView
        android:id="@+id/txtStudentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rock_paper_scissors_app"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <!-- 標題圖 -->
    <ImageView
        android:id="@+id/imgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_image"
        android:layout_marginBottom="16dp" />

    <!-- 玩家選擇提示 -->
    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="何連勝できるかな？"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- 玩家手勢選擇 -->
    <LinearLayout
        android:id="@+id/layoutPlayerHands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/imgGu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/j_gu02"
            android:background="#FFFFFF"
            android:onClick="onClickSelectHand"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/imgChoki"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/j_ch02"
            android:background="#FFFFFF"
            android:onClick="onClickSelectHand"
            android:padding="4dp" />

        <ImageView
            android:id="@+id/imgPa"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:src="@drawable/j_pa02"
            android:background="#FFFFFF"
            android:onClick="onClickSelectHand"
            android:padding="4dp" />
    </LinearLayout>

    <!-- CPU手勢顯示 -->
    <ImageView
        android:id="@+id/imgCpuHand"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible" />

    <!-- 結果文字顯示 -->
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:layout_marginBottom="16dp" />

    <!-- 控制按鈕 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="勝負！"
            android:onClick="onClickStartAction"
            android:enabled="false"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="次の戦いへ"
            android:onClick="onClickNextAction"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>
