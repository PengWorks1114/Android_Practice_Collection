<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/img_logo_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 金額輸入欄 -->
    <EditText
        android:id="@+id/edtTotalPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_total_pay"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="7"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- 人數選擇 Spinner -->
    <Spinner
        android:id="@+id/spinnerPeople"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/people_array"
        app:layout_constraintTop_toBottomOf="@id/edtTotalPay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 計算按鈕 -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_calculate"
        app:layout_constraintTop_toBottomOf="@id/spinnerPeople"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 每人收取金額 -->
    <TextView
        android:id="@+id/txtCollectMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_collect_money_prefix"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCalculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 幹事支付金額 -->
    <TextView
        android:id="@+id/txtMyPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_kanji_pay_prefix"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtCollectMoney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
